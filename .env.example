# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/elaundry?schema=public"

# JWT
JWT_ACCESS_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Cloudinary
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Firebase (for production OTP via SMS)
# Get these from Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_PROJECT_ID="e-laundry-935af"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# App
NODE_ENV="development"
PORT=3000

# OTP (for development, OTP is always 0000)
# In production, use Firebase Phone Auth instead of send-otp/verify-otp endpoints
OTP_EXPIRY_MINUTES=5
